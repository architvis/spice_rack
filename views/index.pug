.container
  .btn-group(width="100%").d-flex.justify-content-center
    button(type="button").btn.btn-outline-primary Spices
    button(type="button").btn.btn-outline-secondary Spice Racks
    button(type="button").btn.btn-outline-success Recipes
  .card
    .card-header Spices
    ol.list-group
      each spice in spices
        li.list-group-item=spice.name
  .card
    .card-header Spice Racks
    ol.list-group
      each rack in spiceRacks
        li.list-group-item.d-flex.justify-content-between.align-items-center=rack.name 
          span.badge.badge-primary.badge-pill 14
  .card
    .card-header Recipes
    ol.list-group
      each recipe in recipes
        li.list-group-item.d-flex.justify-content-between.align-items-center=recipe.name 